<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="50dp"
	android:background="@drawable/titlepop_item_selector">
	<TextView
		android:id="@+id/txt_title"
		style="@style/txt_titleStyle1"
		android:layout_width="wrap_content"
		android:layout_centerVertical="true"
		android:text="@string/app_name" />
	 <LinearLayout
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:layout_centerVertical="true"
		 android:layout_alignParentEnd="true">

		 <ImageView
			 android:id="@+id/image_chat"
			 android:layout_width="40dp"
			 android:layout_height="40dp"
			 android:layout_marginEnd="10dp"
			 android:src="@drawable/ic_baseline_chat_grey_24" />
		 <ImageView
			 android:id="@+id/image_voice"
			 android:layout_width="40dp"
			 android:layout_height="40dp"
			 android:layout_marginEnd="10dp"
			 android:src="@drawable/ic_baseline_local_phone_grey_24" />
		 <ImageView
			 android:id="@+id/image_video"
			 android:layout_width="40dp"
			 android:layout_height="40dp"
			 android:layout_marginEnd="10dp"
			 android:src="@drawable/ic_baseline_videocam_grey_24" />
	 </LinearLayout>

</RelativeLayout>